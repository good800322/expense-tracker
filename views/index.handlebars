<div class="dropdown col-md-7 offset-md-2 mt-5">
  <button class="btn btn-outline-dark dropdown-toggle btn-block text-align-start" type="button" id="dropdownMenuButton"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    類別
  </button>
  <div class="dropdown-menu m-auto col-md-11 dropdown-menu-right" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="/expenses/">全部</a>
    <a class="dropdown-item" href="/expenses/sort/fa-home">家用</a>
    <a class="dropdown-item" href="/expenses/sort/fa-grin-beam">娛樂</a>
    <a class="dropdown-item" href="/expenses/sort/fa-shuttle-van">交通</a>
    <a class="dropdown-item" href="/expenses/sort/fa-utensils">飲食</a>
    <a class="dropdown-item" href="/expenses/sort/fa-pen">其他</a>
  </div>
</div>
<div class="col-md-7 offset-md-2 mt-3">
  <h5 class="font-weight-bold">總金額</h5>
</div>
<div class="col-md-7 offset-md-2">
  <h1 class="text-right text-warning display-2" id="sum">{{sum}}</h1>
</div>
<div class="col-md-10 offset-md-2">
  <ul class="list-group">
    {{#each records}}
    <li class="list-group-item">
      <div class="row d-flex justify-content-between p-0 mt-4">
        <div class="col-8 d-flex">
          <i class="{{this.category}} fa-3x col-auto" style="color:rgb(0, 238, 255)"></i>
          <div class="d-flex flex-column">
            <p class="h3 ">{{this.name}}</p>
            <p class="h5 ">{{this.date}}</p>
          </div>
          <p class="h1 ml-auto">{{this.amount}}</p>
        </div>
        <div class="col-auto mr-1 p-0">
          <a href="/expenses/edit/{{this._id}}" class="btn btn-outline-dark btn-lg m-0">修改</a>
          <form action="/expenses/delete/{{this._id}}" method="POST" style="display:inline"
            onsubmit="return confirm('確定要刪除這份資料嗎？')">
            <button type="submit" class="btn btn-outline-dark btn-lg m-0">刪除</button>
          </form>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>
<div class="col-md-7 offset-md-2 d-flex justify-content-center">
  <a href="/expenses/new" class="btn btn-warning btn-lg  mt-5">新增支出</a>
</div>
</div>